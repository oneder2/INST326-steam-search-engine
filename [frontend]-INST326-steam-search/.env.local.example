# Steam Game Search Engine - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# Frontend Configuration
# ============================================================================

# API Configuration - FastAPI Backend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Feature Flags
NEXT_PUBLIC_ENABLE_SEMANTIC_SEARCH=true
NEXT_PUBLIC_ENABLE_ADVANCED_FILTERS=true
NEXT_PUBLIC_ENABLE_FUNCTION_LIBRARY=true

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# ============================================================================
# Backend Configuration (for reference - not used by frontend)
# ============================================================================

# Python FastAPI Backend Settings
PYTHON_VERSION=3.11.0
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=sqlite:///data/games_data.db

# Search Index Configuration
FAISS_INDEX_PATH=data/game_embeddings.faiss
BM25_INDEX_PATH=data/bm25_index.pkl
GAME_ID_MAPPING_PATH=data/game_id_mapping.json

# API Settings
CORS_ORIGINS=http://localhost:3000,https://steam-search-frontend.onrender.com
API_RATE_LIMIT=100
CACHE_TTL=3600

# Security Settings
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs (if needed)
STEAM_API_KEY=your_steam_api_key_here

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Performance Settings
WORKERS=1
MAX_CONNECTIONS=100
KEEP_ALIVE=2

# ============================================================================
# Production Environment Variables (Render.com)
# ============================================================================

# Production Frontend
# NEXT_PUBLIC_API_BASE_URL=https://steam-search-backend.onrender.com
# NEXT_PUBLIC_APP_URL=https://steam-search-frontend.onrender.com
# NEXT_PUBLIC_DEBUG=false

# Production Backend
# ENVIRONMENT=production
# LOG_LEVEL=INFO
# CORS_ORIGINS=https://steam-search-frontend.onrender.com
