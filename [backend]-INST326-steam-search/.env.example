# Steam Game Search Engine - Backend Environment Variables
# Copy this file to .env and update the values as needed

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,https://steam-search-frontend.onrender.com

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///data/games_data.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# Search Index Configuration
# ============================================================================
FAISS_INDEX_PATH=data/game_embeddings.faiss
BM25_INDEX_PATH=data/bm25_index.pkl
EMBEDDING_MODEL=all-MiniLM-L6-v2
INDEX_REBUILD_INTERVAL=86400

# ============================================================================
# API Configuration
# ============================================================================
API_RATE_LIMIT=100
CACHE_TTL=3600
MAX_SEARCH_RESULTS=100
DEFAULT_SEARCH_LIMIT=20

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/api.log

# ============================================================================
# Security Configuration
# ============================================================================
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# External API Configuration
# ============================================================================
STEAM_API_KEY=your-steam-api-key-here
STEAM_API_BASE_URL=https://api.steampowered.com
STEAM_API_RATE_LIMIT=200

# ============================================================================
# Performance Configuration
# ============================================================================
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5
MAX_REQUEST_SIZE=10485760

# ============================================================================
# Monitoring Configuration
# ============================================================================
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=false
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# Development Configuration
# ============================================================================
RELOAD=true
ACCESS_LOG=true
DEBUG_SQL=false
